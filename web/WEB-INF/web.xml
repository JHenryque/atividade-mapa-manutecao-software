<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
         http://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Descrição da aplicação -->
    <display-name>MinhaAplicacaoServlet</display-name>

    <!-- Configuração do servlet -->
    <servlet>
        <servlet-name>BemVindoServlet</servlet-name>
        <servlet-class>com.bemvindo.servlets.HelloServlet</servlet-class>
    </servlet>

    <!-- Mapeamento da URL -->
    <servlet-mapping>
        <servlet-name>BemVindoServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>
